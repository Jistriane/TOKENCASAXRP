# TokenCasa Backend - Environment Variables

# DATABASE
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=tokencasa

# XRPL
XRPL_NETWORK=testnet
XRPL_NODE=wss://s.altnet.rippletest.net:51233

# IPFS (Pinata) - Get keys at: https://app.pinata.cloud/keys
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here

# SENDGRID - Get key at: https://app.sendgrid.com
SENDGRID_API_KEY=SG.your_sendgrid_key_here
SENDGRID_FROM=noreply@tokencasa.com

# JWT
JWT_SECRET=change_this_in_production_random_string
JWT_EXPIRES_IN=7d

# URLs
FRONTEND_URL=http://localhost:3000
PORT=3001
NODE_ENV=development
