# TokenCasa Production Environment Variables

# ==========================================
# DATABASE
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=tokencasa_user
DB_PASSWORD=secure_password_here
DB_NAME=tokencasa_prod

# ==========================================
# XRPL NETWORK
# ==========================================
XRPL_NETWORK=mainnet
XRPL_NODE=wss://xrplcluster.com

# ==========================================
# IPFS (Pinata)
# ==========================================
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here

# ==========================================
# SENDGRID (Email)
# ==========================================
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM=noreply@tokencasa.com

# ==========================================
# FRONTEND
# ==========================================
FRONTEND_URL=https://tokencasa.com

# ==========================================
# BACKEND
# ==========================================
PORT=3001
NODE_ENV=production

# ==========================================
# GOOGLE ANALYTICS (Frontend)
# ==========================================
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ==========================================
# CORS
# ==========================================
ALLOWED_ORIGINS=https://tokencasa.com,https://www.tokencasa.com

