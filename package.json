{
  "name": "tokencasa-xrp",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "next dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "next build",
    "build:backend": "cd backend && npm run build",
    "start": "next start",
    "lint": "next lint",
    "setup": "./setup-complete.sh",
    "deploy:contracts": "ts-node contracts/deploy.ts",
    "deploy:testnet": "ts-node contracts/deploy.ts -- --network=testnet --secret=${XRPL_ISSUER_SECRET}",
    "deploy:mainnet": "ts-node contracts/deploy.ts -- --network=mainnet --secret=${XRPL_ISSUER_SECRET}",
    "build:contracts": "tsc --project contracts/tsconfig.json",
    "generate:wallet": "ts-node contracts/generate-wallet.ts"
  },
  "dependencies": {
    "@crossmarkio/sdk": "^0.4.0",
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "xrpl": "^4.4.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.23",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "eslint": "^8",
    "eslint-config-next": "^14.2.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
